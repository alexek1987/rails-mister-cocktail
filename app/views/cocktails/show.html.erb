<div class="container padded">
  <h1 class="text-center">Add new cocktail</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6">
<%= @cocktail.name %>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %></li>
  <li><%= dose.ingredient.name %></li>
 <% end %>
<br>
<%= link_to "Add stuff", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "Go back", cocktails_path, class: "btn btn-primary" %>
</div>
</div>
</div>
