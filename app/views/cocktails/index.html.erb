<h1>Cocktails for days</h1>
<div class="container py-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-md-4 mb-3 card">
      <%= link_to cocktail_path(cocktail) do %>

     <div class="card-category" style="background-image: url(https://picsum.photos/200/300)">
      <%= cocktail.name %>
      </div>

      <% end %>
      </div>
    <% end %>
  </div>
</div>

  <div>
    <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-success" %>
  </div>
</div>



