<h1>Cocktails for days</h1>


<div class="container py-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-6 mx-auto">
        <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= cocktail.name %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div>
  <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>


