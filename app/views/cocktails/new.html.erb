<div class="container padded">
  <h1 class="text-center">Add new cocktail</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.submit "Submit", class: "btn btn-success" %>
        <% end %>
        <div>
          <br>
          <%= link_to "Go back", cocktails_path, class: "btn btn-success btn-sm" %>
        </div>
    </div>
  </div>
</div>